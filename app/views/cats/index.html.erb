<%= render 'shared/nav' %>

<h1>Cats</h1>
<div class="index">
<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cats.each do |cat| %>
  <tr>
    <td><img id="thumb" src="<%= cat.image %>"/></td>
    <td><%= cat.name %></td>
    <td><%= cat.category.catcat %></td>
    <td><%= link_to 'Show', cat %></td>
    <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
    <td><%= link_to 'Destroy', cat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Cat', new_cat_path %>
